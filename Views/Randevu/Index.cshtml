@model IEnumerable<Web_Odev.Models.Randevu>

<h1>Randevu Listesi</h1>
<a class="btn btn-primary mb-3" href="/Randevu/Ekle">Yeni Randevu Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>İşlem</th>
            <th>Ücret</th>
            <th>Çalışan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.Tarih.ToString("g")</td>
                <td>@randevu.Islem</td>
                <td>@randevu.Ucret</td>
                <td>@randevu.Calisan.Ad</td>
                <td>
                    <a class="btn btn-danger" href="/Randevu/Sil/@randevu.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
