@model IEnumerable<Web_Odev.Models.Randevu>

<h1>Randevu Listesi</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>İşlem</th>
            <th>Ücret</th>
            <th>Çalışan</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.Tarih.ToString("g")</td>
                <td>@randevu.Islem</td>
                <td>@randevu.Ucret</td>
                <td>@randevu.Calisan.Ad</td>
            </tr>
        }
    </tbody>
</table>
