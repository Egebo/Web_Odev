@model IEnumerable<Web_Odev.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<h1>Hizmetler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Hizmet Ekle</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ucret)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ucret)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>