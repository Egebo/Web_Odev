@using Microsoft.AspNetCore.Identity
@using Web_Odev.Models

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="d-inline">
        <button type="submit" class="btn btn-link text-light">Çıkış Yap</button>
    </form>
    <span class="text-light">Hoş Geldiniz, @User.Identity.Name!</span>
}
else
{
    <a class="btn btn-link text-light" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
    <a class="btn btn-link text-light" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
}
