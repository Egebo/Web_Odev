@model IEnumerable<Web_Odev.Models.Kuafor>

<h1>Kuaför Listesi</h1>
<a class="btn btn-primary mb-3" href="/Kuafor/Ekle">Yeni Kuaför Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Adres</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kuafor in Model)
        {
            <tr>
                <td>@kuafor.Ad</td>
                <td>@kuafor.Adres</td>
                <td>
                    <a class="btn btn-warning" href="/Kuafor/Duzenle/@kuafor.Id">Düzenle</a>
                    <a class="btn btn-danger" href="/Kuafor/Sil/@kuafor.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
