@{
    ViewData["Title"] = "Kuaför Ana Sayfa";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
        .hero-section {
            background: url('https://yourimageurl.com') no-repeat center center;
            background-size: cover;
            height: 100vh;
            color: white;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .service-card {
            margin-top: 30px;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <div class="hero-section">
        <div>
            <h1>Hoşgeldiniz!</h1>
            <p>En İyi Kuaför Hizmetleri İçin Bize Ulaşın</p>
            <a href="#services" class="btn btn-primary btn-lg">Hizmetlerimiz</a>
        </div>
    </div>

    <!-- Services Section -->
    <div id="services" class="container text-center">
        <h2>Hizmetlerimiz</h2>
        <div class="row">
            <div class="col-md-4 service-card">
                <div class="card">
                    <img src="https://yourimageurl.com/haircut.jpg" class="card-img-top" alt="Saç Kesimi">
                    <div class="card-body">
                        <h5 class="card-title">Saç Kesimi</h5>
                        <p class="card-text">Farklı saç stillerini deneyin ve kendinizi yenileyin.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 service-card">
                <div class="card">
                    <img src="https://yourimageurl.com/haircoloring.jpg" class="card-img-top" alt="Saç Boyama">
                    <div class="card-body">
                        <h5 class="card-title">Saç Boyama</h5>
                        <p class="card-text">Doğal renkler ve moda renkler ile saçınıza yeni bir hava katın.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 service-card">
                <div class="card">
                    <img src="https://yourimageurl.com/haircare.jpg" class="card-img-top" alt="Saç Bakımı">
                    <div class="card-body">
                        <h5 class="card-title">Saç Bakımı</h5>
                        <p class="card-text">Saçlarınız için özel bakım ve terapi hizmetleri.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="container text-center" style="padding: 50px 0;">
        <h2>İletişim</h2>
        <p>Randevu almak veya sorularınızı sormak için bizimle iletişime geçin:</p>
        <p>Email: <strong>info@kuafor.com</strong></p>
        <p>Telefon: <strong>+90 123 456 7890</strong></p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
