@model Web_Odev.Models.Calisan

<h1>Yeni Çalışan Ekle</h1>
<form asp-action="Ekle" method="post">
    <div class="mb-3">
        <label for="Ad" class="form-label">Ad</label>
        <input type="text" class="form-control" id="Ad" name="Ad" required />
    </div>
    <div class="mb-3">
        <label for="Uzmanlik" class="form-label">Uzmanlık</label>
        <input type="text" class="form-control" id="Uzmanlik" name="Uzmanlik" required />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
