@model IEnumerable<Web_Odev.Models.Calisan>

<h1>Çalışan Listesi</h1>
<a class="btn btn-primary mb-3" href="/Calisan/Ekle">Yeni Çalışan Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Uzmanlık</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.Ad</td>
                <td>@calisan.Uzmanlik</td>
                <td>
                    <a class="btn btn-danger" href="/Calisan/Sil/@calisan.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
