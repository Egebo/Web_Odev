@model IEnumerable<Web_Odev.Models.Calisan>

<h1>Çalışan Listesi</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Uzmanlık</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.Ad</td>
                <td>@calisan.Uzmanlik</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Calisan" asp-action="Ekle" class="btn btn-primary">Yeni Çalışan Ekle</a>
