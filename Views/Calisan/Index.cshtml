@model IEnumerable<Web_Odev.Models.Calisan>

<h1>Çalışan Listesi</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Uzmanlık</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.Ad</td>
                <td>@calisan.Uzmanlik</td>
                <td>
                    <a asp-controller="Calisan" asp-action="Duzenle" asp-route-id="@calisan.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <form asp-controller="Calisan" asp-action="Sil" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@calisan.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Calisan" asp-action="Ekle" class="btn btn-primary">Yeni Çalışan Ekle</a>
